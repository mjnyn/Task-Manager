<% content_for :title, "Tasks" %>

<div class="task-container">
  <div class="task-card">
    <div class="add-task">
      <%= form_with(model: Task.new, url: tasks_path, local: true) do |f| %>
        <%= f.text_field :title, placeholder: "Add a new task" %>
        <%= f.submit "Add" %>
      <% end %>
    </div>

    <div class="task-columns">
      <div class="task-column">
        <h3>Todo</h3>
        <% @todo_tasks.each do |task| %>
          <div class="task-item">
            <%= button_to complete_task_path(task), method: :patch, class: "circle-btn" do %>
            <% end %>
            <span><%= task.title %></span>
            <%= button_to task_path(task), method: :delete, class: "delete-btn" do %>
              x
            <% end %>
          </div>
        <% end %>
      </div>

      <div class="task-column">
        <h3>Completed</h3>
        <% @completed_tasks.each do |task| %>
          <div class="task-item completed">
            <%= button_to uncomplete_task_path(task), method: :patch, class: "circle-btn done" do %>
            <% end %>
            <span><%= task.title %></span>
            <%= button_to task_path(task), method: :delete, class: "delete-btn" do %>
              âœ•
            <% end %>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>
